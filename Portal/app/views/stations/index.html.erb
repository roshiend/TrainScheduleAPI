<div class="from-actions">
  <div class="row">
    <div class="col-md-12">
      <div class="new-to-create float-right">

        <%= form_tag import_stations_path, id: "station-form",  multipart: true do %>
          <label for="upload-photo" class ="upload"><span><i class="fas fa-arrow-alt-circle-up"></i> Import</span></label>
          <div class= text-left>
            <%=file_field_tag :file, :onchange => "this.form.submit()", :id  => "upload-photo" %>
          </div>
        <%end%>
        <%=link_to  new_station_path do %>
          <h5 class= "upload upload-create"><span><i class="fas fa-clipboard-list nav-icon"></i>  New Station</span></h5>
        <%end%>
       
      </div>
    </div>

  </div>
</div>
<br>

<%if @stations.any?%>

  <table class="table table-dark table-striped">
    <thead>
      <tr>
       <th style="width:10%">
          <input type="checkbox" id="selectAll" value="selectAll">
          <%=link_to "#",class: " index-dele-submit" do %>
            <i class="fas fa-trash-alt delete-all-trash"></i>
          <%end%>
          
        </th> 
        <th style="width:10%; text-align: center;">ID</th>
        <th style="width:30%; text-align: center;">STATION NAME</th>
        <th style="width:20%; text-align: center;">STATION CODE</th>
        <th style="width:40%; text-align: center;">ACTIONS</th>
      </tr>
    </thead>
    <tbody>
      <%@stations.each do |station|%>
        <tr>
          <td class="td-class" style="width:10%; text-align: left;"><%=check_box_tag "station_ids[]", station["id"]%></td>
          <td class="td-class"style="width:10%; text-align: center;" ><%=station["id"]%></td>
          <td class="td-class"style="width:10%; text-align: center;" ><%=link_to station_path(station["id"]) do%> 
                <%=station["station_name"]%>
              <%end%>

          </td>
          <td class="td-class"style="width:10%; text-align: center;" ><%=station["station_code"]%></td>
          <td class="td-class"style="width:10%; text-align: center;" >
            <div class="inline-actions text-center">
              <%=link_to edit_station_path(station["id"]),:style=>"margin-right: 15px;" do%> 
                <i class="fas fa-pen"></i>
              <%end%>
              <%=link_to station_path(station['id']),method: :delete,data: { type: 'json' } do%> 
                <i class="fas fa-minus-circle"></i>
              <%end%>

            </div>
          </td>
        </tr>
      <%end%>    
    </tbody>
  </table>
  <%unless@stations.count<10%>
    <div class="pagination float-right apple_pagination">
      <%= will_paginate @stations,:container => false  %>
    </div>
  <%end%>  
  
  
<%else%>
<div class="error-no-station text-center">
  <h6>
    No Stations in API do you want to <%=link_to "create", new_station_path%> a  one ?
  </h6>
</div>
  
<%end%>

